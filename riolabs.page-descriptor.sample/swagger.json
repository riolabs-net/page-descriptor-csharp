          "firstName",
          "lastName"
        ],
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "format": "int32"
          },
          "firstName": {
            "type": "string",
            "format": "string",
            "x-rlb-position": 0
          },
          "lastName": {
            "type": "string",
            "format": "string",
            "x-rlb-position": 1
          },
          "email": {
            "type": "string",
            "format": "email",
            "x-rlb-position": 2
          },
          "birthDate": {
            "type": "string",
            "format": "date",
            "x-rlb-class": "date-picker",
            "x-rlb-position": 3
          },
          "gender": {
            "type": "string",
            "format": "string",
            "nullable": true,
            "x-rlb-options-simple": [
              "Woman",
              "Man",
              "Transgender",
              "Non-binary",
              "Not-respond"
            ],
            "x-rlb-position": 4
          },
          "maritalStatus": {
            "type": "string",
            "format": "string",
            "nullable": true,
            "x-rlb-options-simple": [
              {
                "key": "S",
                "value": "Single"
              },
              {
                "key": "M",
                "value": "Married"
              },
              {
                "key": "D",
                "value": "Divorced"
              },
              {
                "key": "W",
                "value": "Widowed"
              },
              {
                "key": "N",
                "value": "Not-respond"
              }
            ]
          },
          "drivenCar": {
            "type": "string",
            "format": "string",
            "nullable": true,
            "x-rlb-options-api": {
              "url": "/cars",
              "verb": "GET"
            }
          }
        },
        "x-rlb-cfield-place-birth": {
          "type": "string"
        },
        "x-rlb-cfield-address": {
          "type": "string"
        }
